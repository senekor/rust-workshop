layout {
	default_tab_template {
		pane size=1 borderless=true {
			plugin location="compact-bar"
		}
		children
		pane size=2 borderless=true {
			plugin location="status-bar"
		}
	}
	tab {
		pane {
			command "bash"
			args "-c" "for tab in $(ls dev/zellij/tabs) ; do zellij action new-tab --layout dev/zellij/tabs/$tab ; done ; zellij action new-tab"
			close_on_exit true
		}
	}
}
